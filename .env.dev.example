# .env.dev.example
# Development Environment (Testnet)
ENVIRONMENT=dev

# Database (Docker services)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/mafia_dev
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# TON Testnet
TON_NETWORK=testnet
TON_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_testnet_api_key_here

# Jetton (will be deployed)
MAFIA_JETTON_MASTER_ADDRESS=
SERVICE_WALLET_MNEMONIC=
SERVICE_WALLET_ADDRESS=

# Services
MEDIASOUP_URL=http://voice-server:4443
MEDIASOUP_WORKERS=2

# Security
JWT_SECRET=dev_jwt_secret_change_in_production
WALLET_ENCRYPTION_KEY=dev_encryption_key_must_be_32_char

# Telegram
TELEGRAM_BOT_TOKEN=your_dev_bot_token
TELEGRAM_WEBAPP_URL=https://t.me/mafia_test_bot/app

# Features
AUTO_CREATE_WALLET=true
USE_TESTNET_FAUCET=true