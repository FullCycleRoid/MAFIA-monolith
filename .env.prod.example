# .env.prod.example
# Production Environment (Mainnet)
ENVIRONMENT=prod

# Database (Production cluster)
DATABASE_URL=postgresql+asyncpg://mafia_prod:${DB_PASSWORD}@db-master.prod.example.com:5432/mafia_prod
REDIS_URL=redis://:${REDIS_PASSWORD}@redis-cluster.prod.example.com:6379/0
RABBITMQ_URL=amqp://mafia:${RABBITMQ_PASSWORD}@rabbitmq-cluster.prod.example.com:5672/mafia_prod

# TON Mainnet
TON_NETWORK=mainnet
TON_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=${TON_MAINNET_API_KEY}

# Production Jetton
MAFIA_JETTON_MASTER_ADDRESS=EQC_production_jetton_address
SERVICE_WALLET_MNEMONIC=${SERVICE_WALLET_MNEMONIC_ENCRYPTED}
SERVICE_WALLET_ADDRESS=EQC_production_wallet_address

# Services
MEDIASOUP_URL=https://voice.yourapp.com
MEDIASOUP_WORKERS=20

# Security
JWT_SECRET=${JWT_SECRET_PROD}
WALLET_ENCRYPTION_KEY=${WALLET_ENCRYPTION_KEY_PROD}
REQUIRE_2FA=true

# Telegram
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN_PROD}
TELEGRAM_WEBAPP_URL=https://t.me/mafia_game_bot/app

# Monitoring
SENTRY_DSN=${SENTRY_DSN_PROD}
AMPLITUDE_API_KEY=${AMPLITUDE_API_KEY}

# Features
AUTO_CREATE_WALLET=false
REQUIRE_KYC=true
AUDIT_MODE=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_WITHDRAWALS_PER_DAY=3