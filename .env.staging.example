# .env.staging.example
# Staging Environment (Production-like with Testnet)
ENVIRONMENT=staging

# Database (External services)
DATABASE_URL=postgresql+asyncpg://mafia_staging:password@db.staging.example.com:5432/mafia_staging
REDIS_URL=redis://:password@redis.staging.example.com:6379/0
RABBITMQ_URL=amqp://mafia:password@rabbitmq.staging.example.com:5672/mafia_staging

# TON Testnet (Production config)
TON_NETWORK=testnet
TON_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_staging_ton_api_key

# Deployed Testnet Jetton
MAFIA_JETTON_MASTER_ADDRESS=EQC_staging_jetton_address
SERVICE_WALLET_MNEMONIC=your staging wallet mnemonic here
SERVICE_WALLET_ADDRESS=EQC_staging_wallet_address

# Services
MEDIASOUP_URL=https://voice.staging.example.com
MEDIASOUP_WORKERS=5

# Security
JWT_SECRET=staging_jwt_secret_strong_and_secure
WALLET_ENCRYPTION_KEY=staging_encryption_key_32_chars!!

# Telegram
TELEGRAM_BOT_TOKEN=staging_bot_token
TELEGRAM_WEBAPP_URL=https://t.me/mafia_staging_bot/app

# Monitoring
SENTRY_DSN=https://key@sentry.io/project_id

# Features
AUTO_CREATE_WALLET=false
REQUIRE_KYC=true
